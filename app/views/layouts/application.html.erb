<!DOCTYPE html>
<html>
  <head>
    <title>Conny Product Hunt </title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="<%= image_path("favicon.ico") %>" rel="shortcut icon" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="output.css">
    <%= javascript_importmap_tags %>
  </head>

  <body>     
      <%= render partial:'partials/messages' %>
      <%= render partial:'partials/navbar' %>

      <div class="container px-4 mx-auto">
        <h1 class="mt-8 mb-10 text-4xl font-semibold font-heading"> üêäConny Product Hunt</h1>
        <%= yield %>
      </div>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <% if user_signed_in? %>
        <p>
          Registrado como <%= link_to current_user.email, edit_user_registration_path %>
        </p>
        <%= link_to 'Cerrar Sesi√≥n', destroy_user_session_path, data: {'turbo-method': :delete} %>
      <% else %>
          <%= link_to 'Iniciar Sesi√≥n', new_user_session_path %>
          <br />
          <%= link_to 'Crear cuenta', new_user_registration_path %>
      <% end %>

  </body>

  <script>
      var buttons = document.querySelectorAll('.message-close');

      for(var i = 0; i < buttons.length; i++ ){
        var button = buttons[i];

        button.addEventListener('click', function(){
          var message = document.getElementById("message-" + button.value);
          message.style.display = 'none';
        });
      }
  </script>

</html>
